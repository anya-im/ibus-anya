<?xml version="1.0" encoding="utf-8"?>
<!-- filename: egoisticlily.xml -->
<component>
	<name>org.freedesktop.IBus.EgoisticLily</name>
	<description>EgoisticLily Component</description>
	<exec>@PACKAGE_DIR@/src/ibus-engine-egoisticlily --ibus</exec>
	<version>0.0.1</version>
	<author>Hashimoto Masahiko</author>
	<license>MIT</license>
	<homepage>https://github.com/hashimom/EgoisticLily</homepage>
	<textdomain>ibus-egoisticlily</textdomain>

	<!-- for engines -->
	<observed-paths>
	  <path>@PACKAGE_DIR@/config/egoisticlily/engines.xml</path>
	  <path>@PACKAGE_DIR@/config/egoisticlily/default.xml</path>
	</observed-paths>
	<engines exec="@PACKAGE_DIR@/src/ibus-engine-egoisticlily --xml" />

	<engines>
		<engine>
			<name>anya</name>
			<language>ja</language>
			<author>Hashimoto Masahiko &lt;hashimom@geeko.jp&gt;</author>
			<layout>jp</layout>
			<longname>ANYA</longname>
			<description>ANYA Input Method</description>
			<rank>0</rank>
		</engine>
	</engines>
</component>
